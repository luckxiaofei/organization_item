<view wx:for="{{subjectList}}" wx:key="*this">
    <van-card title="{{item.name}}" desc="{{item.addTime}}"
              thumb-link="{{item.detailUrl}}"
              thumb="https://wx.qlogo.cn/mmopen/vi_32/65vd1qS31BfMdJ82kcx1bWJOCaxibH5DWvib7QJpw8jzfY9kLUyJjN6h4icAUFcGDKEBXhBcnEyVL6GbcJB0Gs0YQ/132">
        <view slot="footer">
            <van-button round color="#FFD700" size="mini" data-type="{{item.type}}" bind:click="goCreateGroup">再来一次</van-button>
            <van-button round size="mini" type="danger" data-id="{{item.id}}" bind:click="deleteSubject">
                <van-dialog id="van-dialog"/>
                删除
            </van-button>
        </view>
    </van-card>
</view>
